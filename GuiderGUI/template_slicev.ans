param scamSettings
    # variable type {label} {default} {Long description}
    exptime entry {Exposure time} {DEFexptime} {Exptime in seconds}
    gain entry {Gain} {DEFgain} {Camera conversion gain}
endparam
param jogSettings
    # variable type {label} {default} {Long description}
    jog_arcsec entry {Offset size} {DEFjog} {Offset in arcsec}
endparam
#############
buttonbar
#############    $dir macro refers to directory of this file
JOG SETTINGS
*
button
$param(jogSettings) ; scam jogset $jog_arcsec # | $text
#############
UP
*
button
echo scam jog N | $text
DOWN
*
button
echo scam jog S | $text 
LEFT
*
button
echo scam jog E | $text 
RIGHT
*
button
echo scam jog W | $text
#############
PUT ON SLIT
*
button
$message(yesno,Move slit center to crosshairs?) | $dir/putonslit.sh # | $text
#############
PUT ON ACAM
*
button
$message(yesno,Move ACAM center to crosshairs?) # $dir/putonslit.sh # | $text
############
endbuttonbar
#############
#############
buttonbar
#############    $dir macro refers to directory of this file
SYNC DISPLAY
*
button
$dir/sync_display.sh slicev # | $text
#############
CAMERA SETTINGS
*
button
$param(scamSettings) ; scam guiset $exptime $gain # | $text
#############
GRAB FITS
*
button
$dir/grabfits.sh slicev # | $text
#############
GUI HELP
*
button
cat $dir/help_slicev.txt | $text
#############
endbuttonbar
hmenu Stuff
  startsync
  *
  menu
  sleep 2 | $dir/sync_display.sh slicev # | $text

  world
  *
  menu
  echo "World" | $text

  hmenu More Stuff
    hello world
    *
    menu
    echo "Hello World" | $text
  endhmenu
endhmenu
