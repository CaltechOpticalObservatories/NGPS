param scamSettings
    # variable type {label} {default} {Long description}
    exptime entry {Exposure time (s)} {DEFexptime} {}
    gain entry {CCD EMGain (1=off)} {DEFgain} { }
    bin menu {Binning (px)} {DEFbin|1|2|4|8} { }
    navg entry {Rolling Average (N frames)} {DEFnavg} { }
endparam
param jogSettings
    # variable type {label} {default} {Long description}
    jog_arcsec entry {Offset step (arcsec)} {DEFjog} { }
endparam
#############
buttonbar
#############    $dir macro refers to directory of this file
JOG SETTINGS
*
button
$param(jogSettings) ; echo "$jog_arcsec" > $dir/jog.ini | $null   # save the jog setting to file
#############
LEFT
*
button
$dir/jog_scam.sh LEFT #| $text 
RIGHT
*
button
$dir/jog_scam.sh RIGHT #| $text 
UP
*
button
$dir/jog_scam.sh UP #| $text 
DOWN
*
button
$dir/jog_scam.sh DOWN #| $text 
#############
PUT ON SLIT
*
button
$message(yesno,Move slit center to crosshairs?) | $dir/putonslit.sh # | $text
#############
PUT ON GUIDER
*
button
$message(yesno,Move this field to ACAM?) | $dir/putonslit.sh guider true #| $text  # true=reverse direction
############
endbuttonbar
#############
#############
buttonbar
#############    $dir macro refers to directory of this file
SYNC GUI
*
button
$dir/sync_display.sh slicev # | $text
#############
CAMERA SETTINGS
*
button
$param(scamSettings) ; scam guiset $exptime $gain $bin $navg # | $text
#############
GRAB FITS
*
button
$dir/grabfits.sh slicev # | $text
#############
GUI HELP
*
button
cat $dir/help_slicev.txt | $text
#############
endbuttonbar
hmenu Stuff
  startsync
  *
  menu
  sleep 2 | $dir/sync_display.sh slicev # | $text

  world
  *
  menu
  echo "World" | $text

  hmenu More Stuff
    hello world
    *
    menu
    echo "Hello World" | $text
  endhmenu
endhmenu
