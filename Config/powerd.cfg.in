# NPS unit 3
#
NPS_PLUG="3 1 NETWORK_SWITCH"
NPS_PLUG="3 2 LAMP_TH_AR"
NPS_PLUG="3 3 LAMP_FE_AR"
NPS_PLUG="3 4 LAMP_XE"
